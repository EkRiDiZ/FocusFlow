{
  "manifest_version": 3,
  "name": "FocusFlow",
  "version": "1.0",
  "description": "Simplifies complex text for ADHD and Dyslexia users",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
